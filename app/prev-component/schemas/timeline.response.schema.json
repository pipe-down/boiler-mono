{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TimelineActivityDto",
  "description": "타임라인 활동 정보 응답 스키마",
  "type": "object",
  "properties": {
    "activityType": { "type": "string" },
    "activityTime": { "type": "string", "format": "date-time" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "userName": { "type": "string" },
    "userId": { "type": "integer" },
    "referenceId": { "type": "integer" },
    "referenceType": { "type": "string" },
    "likes": {
      "type": "object",
      "properties": {
        "count": { "type": "integer", "minimum": 0 },
        "isLikedByCurrentUser": { "type": "boolean" }
      },
      "required": ["count", "isLikedByCurrentUser"]
    },
    "comments": {
      "type": "object",
      "properties": {
        "count": { "type": "integer", "minimum": 0 }
      },
      "required": ["count"]
    }
  },
  "required": [
    "activityType",
    "activityTime",
    "title",
    "userName",
    "userId",
    "referenceId",
    "referenceType",
    "likes",
    "comments"
  ]
}
