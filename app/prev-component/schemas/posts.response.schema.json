{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PostResponse",
  "description": "게시글 상세 정보 응답 스키마",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string", "minLength": 1 },
    "content": { "type": "string" },
    "authorId": { "type": "integer" },
    "authorNickname": { "type": "string" },
    "postType": { "type": "string", "enum": ["GENERAL", "NOTICE", "EVENT"] },
    "postCategory": { "type": "string", "enum": ["FREE", "TRAVEL_REVIEW", "QNA"] },
    "status": { "type": "string", "enum": ["PUBLISHED", "DRAFT", "HIDDEN", "DELETED"] },
    "viewCount": { "type": "integer", "minimum": 0 },
    "likeCount": { "type": "integer", "minimum": 0 },
    "commentCount": { "type": "integer", "minimum": 0 },
    "isLikedByCurrentUser": { "type": "boolean" },
    "isBookmarkedByCurrentUser": { "type": "boolean" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "originalFileName": { "type": "string" },
          "downloadUri": { "type": "string", "format": "uri" }
        },
        "required": ["id", "downloadUri"]
      }
    },
    "createdAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "title", "status", "attachments", "createdAt"]
}
